[*.{kt,kts,java}]
ij_kotlin_name_count_to_use_star_import = 999
ij_kotlin_name_count_to_use_star_import_for_members = 999
wildcard_import_limit=999 # don't use wildcard for Java imports
indent_size=2
indent_style=space
continuation_indent_size=2
trim_trailing_whitespace=true
insert_final_newline=true
end_of_line=lf
# max_line_length=140 # Add back once ktlint 0.40.0 is released, https://github.com/pinterest/ktlint/pull/928/
charset=utf-8